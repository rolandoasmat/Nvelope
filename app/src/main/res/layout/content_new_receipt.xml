<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:context="com.rolandoasmat.nvelope.NewReceipt"
    tools:showIn="@layout/activity_new_receipt"
    android:padding="16dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name_of_location"/>
    <EditText
        android:id="@+id/location_name_edit_text"
        style="@style/FullWidthEditText"
        android:inputType="text"
        android:hint="@string/name_of_location"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/category"/>
    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></Spinner>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/method_of_payment"/>
    <EditText
        android:id="@+id/paymnet_method_edit_text"
        style="@style/FullWidthEditText"
        android:hint="@string/method_of_payment"/>


    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/amount"/>
    <EditText
        android:id="@+id/amount_edit_text"
        style="@style/FullWidthEditText"
        android:hint="@string/amount"
        android:ems="10"
        android:inputType="numberDecimal" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"/>

</LinearLayout>